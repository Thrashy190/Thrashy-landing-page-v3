<style>
  :root {
    --cursor-color: white;
    --cursor-hover-color: #e2df42;
  }

  #custom-cursor {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 50;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--cursor-color);
    pointer-events: none;
    transform: translate(-50%, -50%);
    mix-blend-mode: difference;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: sans-serif;
    font-size: 12px;
    font-weight: bold;
    color: black;
  }
</style>

<div id="custom-cursor"></div>

<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    const cursor = document.getElementById("custom-cursor");
    if (!cursor) return;

    // Movimiento básico
    document.addEventListener("mousemove", (e) => {
      gsap.to(cursor, {
        x: e.clientX,
        y: e.clientY,
        duration: 0.15,
        ease: "power2.out",
      });
    });

    // Click efecto polimórfico
    document.addEventListener("click", () => {
      gsap.to(cursor, {
        scale: 2,
        duration: 0.2,
        ease: "back.out(1.7)",
        onComplete: () => {
          gsap.to(cursor, {
            scale: 1,
            duration: 0.3,
          });
        },
      });
    });

    const beat = gsap.to(cursor, {
      scale: 0.5,
      repeat: -1,
      yoyo: true,
      duration: 0.3,
      ease: "power1.inOut",
      paused: true,
    });

    document.querySelectorAll("a, button, .pulse-cursor").forEach((el) => {
      el.addEventListener("mouseenter", () => {
        beat.restart();
        beat.play();
      });

      el.addEventListener("mouseleave", () => {
        beat.pause();
        gsap.to(cursor, {
          scale: 0.85,
          duration: 0.2,
          ease: "power1.out",
        });
      });
    });
  });
</script>
